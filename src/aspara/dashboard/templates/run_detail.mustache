<div id="run-detail" data-project="{{project}}" data-run="{{run_name}}" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Content Column -->
  <div class="lg:col-span-2 space-y-8">
    <!-- Run Details Card -->
    <div class="bg-base-surface border border-base-border p-6">
      <div class="mb-6">
        <h3 class="text-xl font-bold {{#is_corrupted}}text-status-error{{/is_corrupted}}{{^is_corrupted}}text-text-primary{{/is_corrupted}} mb-2 tracking-tight">
          {{run_name}}
          {{#is_corrupted}}
          <span class="ml-2 inline-flex items-center px-2 py-0.5 text-xs font-medium bg-red-50 text-status-error border border-status-error rounded">
            Corrupted Run
          </span>
          {{/is_corrupted}}
        </h3>
        <p class="text-sm {{#is_corrupted}}text-status-error{{/is_corrupted}}{{^is_corrupted}}text-text-secondary{{/is_corrupted}}">Project: <a href="/projects/{{project}}" class="text-accent hover:underline">{{project}}</a></p>
        {{#is_corrupted}}
        <p class="text-sm text-status-error mt-1">{{error_message}}</p>
        {{/is_corrupted}}
      </div>

      <div class="space-y-4 text-sm text-text-primary">
        <div>
          <span class="font-semibold">Start Time:</span>
          <span class="ml-2 font-mono text-text-secondary">{{formatted_start_time}}</span>
        </div>
        <div>
          <span class="font-semibold">Duration:</span>
          <span class="ml-2 font-mono text-text-secondary">{{duration}}</span>
        </div>
        <div>
          <span class="font-semibold">Status:</span>
          <span class="ml-2">
            {{#is_corrupted}}
            <span class="text-status-error font-medium">Error</span>
            {{/is_corrupted}}
            {{^is_corrupted}}
            <span class="text-status-success font-medium">Completed</span>
            {{/is_corrupted}}
          </span>
        </div>
      </div>

      <div class="mt-4 pt-4 border-t border-base-border">
        <div class="text-xs text-text-muted uppercase tracking-wider mb-2">Tags</div>
        <div id="run-tags-detail" class="flex flex-wrap gap-1.5"
             data-project-name="{{project}}"
             data-run-name="{{run_name}}">
          {{#tags}}
          <span class="px-2 py-0.5 text-xs bg-base-bg text-text-secondary border border-base-border rounded">{{.}}</span>
          {{/tags}}
        </div>
      </div>

      <div class="mt-4 pt-4 border-t border-base-border">
        <div class="flex justify-between items-start mb-2">
          <div class="text-xs text-text-muted uppercase tracking-wider">Note</div>
          <div id="run-note-edit-btn"></div>
        </div>
        <div id="run-note" class="text-sm text-text-secondary"
             data-api-endpoint="/api/projects/{{project}}/runs/{{run_name}}/metadata"
             data-edit-btn-id="run-note-edit-btn"></div>
      </div>
    </div>

    <!-- Metric Charts Card -->
    <div class="bg-base-surface border border-base-border p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-sm font-semibold text-text-primary uppercase tracking-wider">Metric Charts</h3>
        <div id="chartControls" class="hidden flex items-center gap-2">
          {{> _chart_size_controls}}
        </div>
      </div>
      <div id="metrics-container" class="space-y-8">
        <!-- Metric charts will be dynamically added here -->
      </div>
    </div>
  </div>

  <!-- Sidebar Column -->
  <div class="lg:col-span-1 space-y-8">
    <!-- Parameters Card -->
    <div class="bg-base-surface border border-base-border p-6">
      <h3 class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-6">Parameters</h3>
      {{#has_params}}
      <dl class="space-y-3">
        {{#params}}
        <div class="pb-3 border-b border-base-border">
          <dt class="text-xs text-text-muted uppercase tracking-wider mb-1">{{key}}</dt>
          <dd class="text-sm text-text-primary font-mono">{{value}}</dd>
        </div>
        {{/params}}
      </dl>
      {{/has_params}}
      {{^has_params}}
      <p class="text-sm text-text-muted">No parameters logged for this run.</p>
      {{/has_params}}
    </div>

    <!-- Code & Artifacts Card -->
    <div class="bg-base-surface border border-base-border p-6">
      <h3 class="text-sm font-semibold text-text-primary uppercase tracking-wider mb-6">Code & Artifacts</h3>
      {{#has_artifacts}}
      <div class="space-y-2 mb-4">
        {{#artifacts}}
        <div class="flex items-center justify-between p-2.5 bg-base-bg border border-base-border rounded">
          <div class="flex items-center min-w-0">
            <span class="text-sm font-medium text-text-primary truncate">{{name}}</span>
            {{#description}}
            <span class="ml-2 text-xs text-text-muted truncate">{{description}}</span>
            {{/description}}
          </div>
          <div class="text-xs text-text-muted font-mono ml-2">
            {{file_size}}b
          </div>
        </div>
        {{/artifacts}}
      </div>
      <a href="/api/projects/{{project}}/runs/{{run_name}}/artifacts/download"
         class="inline-block px-4 py-2 bg-action text-white text-sm font-medium border border-action rounded-button hover:bg-action-hover transition-colors">
        Download ZIP
      </a>
      {{/has_artifacts}}
      {{^has_artifacts}}
      <p class="text-sm text-text-muted">No artifacts available.</p>
      {{/has_artifacts}}
    </div>
  </div>
</div>

<script type="module" src="/static/dist/pages/run-detail.js"></script>
